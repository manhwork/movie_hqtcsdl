extends ../layout

block content
  h1 Add New Content
  form(action="/contents", method="POST")
    .mb-3
      label.form-label(for="title") Title
      input#title.form-control(type="text", name="title", required)
    .mb-3
      label.form-label(for="originalTitle") Original Title
      input#originalTitle.form-control(type="text", name="originalTitle")
    .mb-3
      label.form-label(for="description") Description
      textarea#description.form-control(name="description", rows="3")
    .mb-3
      label.form-label(for="type") Type
      select#type.form-control(name="type", required)
        option(value="movie") Movie
        option(value="tvshow") TV Show
    .mb-3
      label.form-label(for="releaseDate") Release Date
      input#releaseDate.form-control(type="date", name="releaseDate")
    .mb-3
      label.form-label(for="rating") Rating
      input#rating.form-control(type="number", name="rating", step="0.1", min="0", max="10")
    .mb-3
      label.form-label(for="posterURL") Poster URL
      input#posterURL.form-control(type="url", name="posterURL")
    .mb-3
      label.form-label(for="backdropURL") Backdrop URL
      input#backdropURL.form-control(type="url", name="backdropURL")
    .mb-3
      label.form-label(for="trailerURL") Trailer URL
      input#trailerURL.form-control(type="url", name="trailerURL")
    .mb-3
      label.form-label(for="videoURL") Video URL
      input#videoURL.form-control(type="url", name="videoURL")
    .mb-3
      label.form-label(for="duration") Duration (minutes)
      input#duration.form-control(type="number", name="duration")
    .mb-3
      label.form-label(for="numberOfSeasons") Number of Seasons
      input#numberOfSeasons.form-control(type="number", name="numberOfSeasons")
    .mb-3
      label.form-label(for="status") Status
      select#status.form-control(name="status")
        option(value="ongoing") Ongoing
        option(value="completed") Completed
        option(value="canceled") Canceled
    .mb-3
      label.form-label(for="country") Country
      input#country.form-control(type="text", name="country")
    .mb-3
      label.form-label(for="language") Language
      input#language.form-control(type="text", name="language")
    .btn-group
      button.btn.btn-primary(type="submit") Create
      a.btn.btn-secondary(href="/contents") Cancel 