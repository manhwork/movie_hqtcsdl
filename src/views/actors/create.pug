extends ../layout

block content
  h1 Add New Actor
  form(action="/actors", method="POST")
    .mb-3
      label.form-label(for="name") Name
      input#name.form-control(type="text", name="name", required)
    .mb-3
      label.form-label(for="originalName") Original Name
      input#originalName.form-control(type="text", name="originalName")
    .mb-3
      label.form-label(for="bio") Bio
      textarea#bio.form-control(name="bio", rows="3")
    .mb-3
      label.form-label(for="birthDate") Birth Date
      input#birthDate.form-control(type="date", name="birthDate")
    .mb-3
      label.form-label(for="nationality") Nationality
      input#nationality.form-control(type="text", name="nationality")
    .mb-3
      label.form-label(for="photoURL") Photo URL
      input#photoURL.form-control(type="url", name="photoURL")
    .btn-group
      button.btn.btn-primary(type="submit") Create
      a.btn.btn-secondary(href="/actors") Cancel 