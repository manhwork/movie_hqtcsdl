extends ../layout

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1 Directors
    a.btn.btn-primary(href="/directors/create") Add New Director

  .row
    each director in directors
      .col-md-4.mb-4
        .card
          if director.PhotoURL
            img.card-img-top(src=director.PhotoURL, alt=director.Name)
          .card-body
            h5.card-title= director.Name
            if director.OriginalName
              p.card-text Original Name: #{director.OriginalName}
            if director.Nationality
              p.card-text Nationality: #{director.Nationality}
            if director.BirthDate
              p.card-text Birth Date: #{new Date(director.BirthDate).toLocaleDateString()}
            .btn-group
              a.btn.btn-info(href=`/directors/${director.DirectorID}`) View
              a.btn.btn-warning(href=`/directors/${director.DirectorID}/edit`) Edit
              form.d-inline(action=`/directors/${director.DirectorID}?_method=DELETE`, method="POST")
                button.btn.btn-danger(type="submit") Delete 